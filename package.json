{
  "name": "focus-space",
  "displayName": "Focus Space",
  "description": "Maintain a focused view of files and folders for large projects",
  "version": "0.0.5",
  "publisher": "focus-space",
  "icon": "icons/focus-space-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ormasoftchile/focus-space.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "focus",
    "productivity",
    "files",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "focusSpace.test",
        "title": "Test Focus Space"
      },
      {
        "command": "focusSpace.testData",
        "title": "Test Focus Space Data"
      },
      {
        "command": "focusSpace.populateTestData",
        "title": "Populate Focus Space Test Data"
      },
      {
        "command": "focusSpace.clearAllData",
        "title": "Clear All Focus Space Data"
      },
      {
        "command": "focusSpace.addToFocusSpace",
        "title": "Add to Focus Space",
        "icon": "$(target)"
      },
      {
        "command": "focusSpace.addFilesToFocusSpace",
        "title": "Focus Space: Add Files..."
      },
      {
        "command": "focusSpace.removeFromFocusSpace",
        "title": "Remove from Focus Space",
        "icon": "$(close)"
      },
      {
        "command": "focusSpace.removeAll",
        "title": "Remove All from Focus Space",
        "icon": "$(clear-all)"
      },
      {
        "command": "focusSpace.revealInExplorer",
        "title": "Reveal in Explorer"
      },
      {
        "command": "focusSpace.convertFolderToSection",
        "title": "Convert to Editable Section"
      },
      {
        "command": "focusSpace.createSection",
        "title": "Create Section"
      },
      {
        "command": "focusSpace.closeNonFocusBuffers",
        "title": "Close Non-Focus"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "focusSpace",
          "name": "Focus Space",
          "icon": "$(target)",
          "contextualTitle": "Focus Space",
          "when": "focusSpace.hasItems"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "focusSpace.addToFocusSpace"
        }
      ],
      "editor/title/context": [
        {
          "command": "focusSpace.addToFocusSpace",
          "when": "resourceScheme == file",
          "group": "1_modification"
        },
        {
          "command": "focusSpace.closeNonFocusBuffers",
          "when": "focusSpace.hasItems",
          "group": "1_close"
        }
      ],
      "editor/title": [
        {
          "command": "focusSpace.addToFocusSpace",
          "when": "resourceScheme == file",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "focusSpace.createSection",
          "when": "view == focusSpace",
          "group": "navigation"
        },
        {
          "command": "focusSpace.removeAll",
          "when": "view == focusSpace",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "focusSpace.removeFromFocusSpace",
          "when": "view == focusSpace && viewItem != section",
          "group": "inline"
        },
        {
          "command": "focusSpace.revealInExplorer",
          "when": "view == focusSpace && viewItem != section",
          "group": "navigation"
        },
        {
          "command": "focusSpace.convertFolderToSection",
          "when": "view == focusSpace && viewItem == folder",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "focusSpace.addToFocusSpace",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorFocus"
      },
      {
        "command": "focusSpace.addFilesToFocusSpace",
        "key": "ctrl+shift+alt+f",
        "mac": "cmd+shift+alt+f"
      }
    ],
    "colors": [
      {
        "id": "focusSpace.activeFile",
        "description": "Color for the active file indicator in Focus Space",
        "defaults": {
          "dark": "#007ACC",
          "light": "#005A9F",
          "highContrast": "#ffffff"
        }
      }
    ],
    "configuration": {
      "title": "Focus Space",
      "properties": {
        "focusSpace.hideWhenEmpty": {
          "type": "boolean",
          "default": true,
          "description": "Automatically hide the Focus Space view when it contains no items"
        },
        "focusSpace.revealBehavior": {
          "type": "string",
          "enum": [
            "smart",
            "focus-space-only",
            "both",
            "disabled"
          ],
          "default": "smart",
          "description": "Control how files are revealed when opened. 'smart': reveal in Focus Space if present, otherwise Explorer; 'focus-space-only': only reveal in Focus Space; 'both': reveal in both Focus Space and Explorer; 'disabled': never auto-reveal"
        },
        "focusSpace.showItemCount": {
          "type": "boolean",
          "default": true,
          "description": "Show the number of items in the Focus Space view title"
        },
        "focusSpace.showFileIcons": {
          "type": "boolean",
          "default": true,
          "description": "Display file type icons next to file names"
        },
        "focusSpace.sortOrder": {
          "type": "string",
          "enum": [
            "manual",
            "name",
            "dateAdded",
            "fileType"
          ],
          "default": "manual",
          "description": "Default sort order for Focus Space items. 'manual': user-defined order; 'name': alphabetical; 'dateAdded': most recent first; 'fileType': grouped by extension"
        },
        "focusSpace.enableDragAndDrop": {
          "type": "boolean",
          "default": true,
          "description": "Allow reordering items in Focus Space through drag and drop"
        },
        "focusSpace.allowExternalDrop": {
          "type": "boolean",
          "default": true,
          "description": "Accept files dropped from outside VS Code (explorer, other apps)"
        },
        "focusSpace.autoRevealActiveFile": {
          "type": "boolean",
          "default": true,
          "description": "Automatically highlight and reveal the currently active file in Focus Space"
        },
        "focusSpace.removeDeletedFiles": {
          "type": "boolean",
          "default": true,
          "description": "Automatically remove files from Focus Space when they are deleted from the file system"
        },
        "focusSpace.updateMovedFiles": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update file paths in Focus Space when files are moved or renamed"
        },
        "focusSpace.enableFileWatcher": {
          "type": "boolean",
          "default": true,
          "description": "Monitor file system changes to keep Focus Space synchronized"
        },
        "focusSpace.maxFileSize": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "maximum": 100,
          "description": "Maximum file size in MB to handle without warnings"
        },
        "focusSpace.maxItemCount": {
          "type": "number",
          "default": 1000,
          "minimum": 10,
          "maximum": 10000,
          "description": "Maximum number of items in Focus Space before showing performance warnings"
        },
        "focusSpace.excludePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/.git/**",
            "**/dist/**",
            "**/build/**",
            "**/*.tmp",
            "**/*.log"
          ],
          "description": "Glob patterns for files and folders to exclude from Focus Space operations"
        },
        "focusSpace.doubleClickBehavior": {
          "type": "string",
          "enum": [
            "open",
            "reveal",
            "both"
          ],
          "default": "open",
          "description": "Action when double-clicking items in Focus Space. 'open': open file in editor; 'reveal': reveal in Explorer; 'both': both actions"
        },
        "focusSpace.showInExplorerContext": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Add to Focus Space' option in Explorer context menus"
        },
        "focusSpace.showInEditorTitle": {
          "type": "boolean",
          "default": true,
          "description": "Show 'Add to Focus Space' button in editor title bar"
        },
        "focusSpace.workspaceSpecificSettings": {
          "type": "boolean",
          "default": true,
          "description": "Allow workspace-specific Focus Space configurations"
        },
        "focusSpace.autoSaveEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save Focus Space changes"
        },
        "focusSpace.watcherDebounceMs": {
          "type": "number",
          "default": 100,
          "minimum": 50,
          "maximum": 5000,
          "description": "Debounce delay in milliseconds for file system watcher events"
        },
        "focusSpace.persistenceDebounceMs": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 10000,
          "description": "Debounce delay in milliseconds for saving Focus Space data"
        },
        "focusSpace.closeNonFocusBuffers.confirmBeforeClose": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before closing non-focus editors"
        },
        "focusSpace.closeNonFocusBuffers.preserveUnsaved": {
          "type": "boolean",
          "default": true,
          "description": "Preserve unsaved files when closing non-focus editors (prompts for save)"
        },
        "focusSpace.closeNonFocusBuffers.scope": {
          "type": "string",
          "enum": [
            "currentGroup",
            "allGroups"
          ],
          "default": "currentGroup",
          "description": "Scope for closing non-focus editors. 'currentGroup': only current editor group; 'allGroups': all editor groups"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "validate": "./scripts/validate.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "mocha": "^10.2.0",
    "sinon": "^21.0.0",
    "typescript": "^5.1.6"
  }
}
